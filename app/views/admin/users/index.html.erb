<div class="max-w-6xl mx-auto p-6">
  <div class="flex items-center justify-between mb-4">
    <h1 class="text-2xl font-semibold">Users</h1>
    <%= link_to "New User", new_admin_user_path, class: "px-4 py-2 rounded-xl bg-indigo-600 text-white hover:bg-indigo-700" %>
  </div>

  <div class="bg-white rounded-xl shadow-sm overflow-x-auto ring-1 ring-stone-200/70">
    <table class="min-w-full text-sm">
      <thead class="bg-stone-100">
        <tr>
          <th class="px-4 py-2 text-left">Email</th>
          <th class="px-4 py-2 text-left">Role</th>
          <th class="px-4 py-2 text-left">School</th>
          <th class="px-4 py-2 text-right">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |u| %>
          <tr class="border-t">
            <td class="px-4 py-2"><%= u.email %></td>
            <td class="px-4 py-2"><%= u.role.humanize %></td>
            <td class="px-4 py-2"><%= u.school&.name || "â€”" %></td>
            <td class="px-4 py-2 text-right">
              <%= link_to "Edit", edit_admin_user_path(u), class: "px-3 py-1 rounded border mr-2" %>
              <%= link_to "Delete", admin_user_path(u), data: { turbo_method: :delete, turbo_confirm: "Delete this user?" }, class: "px-3 py-1 rounded border text-rose-700 hover:bg-rose-50" unless u == current_user %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
